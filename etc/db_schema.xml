<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="newsletter_subscriber" resource="default" engine="innodb" comment="Newsletter Subscriber">
        <column xsi:type="varchar" name="subscriber_firstname" nullable="true" length="150" comment="Subscriber Firstname"/>
        <column xsi:type="varchar" name="subscriber_lastname" nullable="true" length="150" comment="Subscriber Lastname"/>
    </table>
</schema>
